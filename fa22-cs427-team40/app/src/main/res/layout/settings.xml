<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="62dp"
        android:layout_height="23dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="23dp"
        android:text="Theme"
        app:layout_constraintBottom_toTopOf="@+id/themesRadioGroupMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="180dp"
        android:text="Settings"
        app:layout_constraintBottom_toTopOf="@+id/donebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />


    <RadioGroup
        android:id="@+id/themesRadioGroupMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/donebtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="44dp">

        <RadioButton
            android:id="@+id/rbt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default" />

        <RadioButton
            android:id="@+id/rbt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default Variant" />

        <RadioButton
            android:id="@+id/rbt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Illini Blue" />

        <RadioButton
            android:id="@+id/rbt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Illini Orange" />

    </RadioGroup>


    <Button
        android:id="@+id/donebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Done"
        app:layout_constraintTop_toBottomOf="@+id/themesRadioGroupMain"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>